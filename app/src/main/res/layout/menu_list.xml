<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">



    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="6">

        <Button
            android:id="@+id/returnbtn"
            android:layout_width="51dp"
            android:layout_height="48dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/backdesign"
            android:gravity="center"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hancommalangmalangbold"
            android:gravity="center"
            android:text="메추리"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/kinds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="국/탕 음식"
            android:fontFamily="@font/hancommalangmalangbold"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

    </GridLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#BFBDBDBD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="@string/info"
        android:fontFamily="@font/notosanskrblack"
        android:textSize="15sp"

        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:baselineAligned="false"
        android:isScrollContainer="false"
        android:columnCount="2"
        android:rowCount="4">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="190dp"

            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/spicy2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="217dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="190dp"

            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/kimchi"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="273dp"
            tools:layout_editor_absoluteY="217dp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:fontFamily="@font/notosanskrblack"
            android:text="매운탕" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:fontFamily="@font/notosanskrblack"
            android:text="김치찌개" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="190dp"

            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/chicken"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="273dp"
            tools:layout_editor_absoluteY="466dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="190dp"

            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/kchicken"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="466dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:fontFamily="@font/notosanskrblack"
            android:text="국물닭발" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:fontFamily="@font/notosanskrblack"
            android:text="닭볶음탕" />


    </GridLayout>



</LinearLayout>